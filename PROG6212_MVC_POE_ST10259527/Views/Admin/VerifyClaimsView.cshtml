                <td>$50.00</td>
                <td>$2,000.00</td>
                <td>
                    <button class="btn btn-success btn-sm" onclick="approveClaim(1)">Approve</button>
                    <button class="btn btn-danger btn-sm" onclick="rejectClaim(1)">Reject</button>
                </td>
            </tr>
            <!-- Repeat for additional claims -->
        </tbody>
    </table>
</div>

<script>
    function approveClaim(claimId) {
        // Logic to approve the claim (e.g., AJAX request to server)
        document.getElementById('message').style.display = 'block';
        document.getElementById('message').textContent = 'Claim ' + claimId + ' approved successfully!';
        // Further logic to remove the row from the table or mark it as approved
    }

    function rejectClaim(claimId) {
        // Logic to reject the claim (e.g., AJAX request to server)
        document.getElementById('message').style.display = 'block';
        document.getElementById('message').textContent = 'Claim ' + claimId + ' rejected.';
        // Further logic to remove the row from the table or mark it as rejected
    }
</script>
