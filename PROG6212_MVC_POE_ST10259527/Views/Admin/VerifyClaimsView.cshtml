@model List<PROG6212_MVC_POE_ST10259527.Models.ClaimsModel>

@{
    ViewData["Title"] = "Verify Claims";
}

<!-- Include SweetAlert CSS and JS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

<div class="container mt-5">
    <h1>Verify Claims</h1>

    <!-- Claims table -->
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th scope="col">Module Code</th>
                <th scope="col">Lecturer Name</th>
                <th scope="col">Hours Worked</th>
                <th scope="col">Hourly Rate</th>
                <th scope="col">Date</th>
                <th scope="col">Total Amount</th>
                <th scope="col">Actions</th>
                <th scope="col">Documents</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-claim-id="@item.RowKey">
                    <th scope="row">@item.RowKey</th>
                    <td>@item.ModuleCode</td>
                    <td>@item.LecturerName</td>
                    <td>@item.HoursWorked</td>
                    <td>@item.HourlyRate</td>
                    <td>@item.Date</td>
                    <td>@item.CalculateTotalAmount()</td>
                    <td>
                        <button class="btn btn-success btn-sm" onclick="ApproveClaim('@item.RowKey')">Approve</button>
                        <button class="btn btn-danger btn-sm" onclick="RejectClaim('@item.RowKey')">Reject</button>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.SupportingDocumentName))
                        {
                            <a href="@Url.Action("DownloadFile", "Lecturer", new { fileName = item.SupportingDocumentName })" class="btn btn-primary" target="_blank">Download</a>
                        }
                        else
                        {
                            <span>No document</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function ApproveClaim(claimId) {
        $.ajax({
            url: '@Url.Action("ApproveClaim", "Admin")',
            type: 'POST',
            data: { claimId: claimId },
            success: function(response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: response.message,
                    }).then(() => {
                        removeClaimRow(claimId);
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message,
                    });
                }
            }
        });
    }

    function RejectClaim(claimId) {
        $.ajax({
            url: '@Url.Action("RejectClaim", "Admin")',
            type: 'POST',
            data: { claimId: claimId },
            success: function(response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: response.message,
                    }).then(() => {
                        removeClaimRow(claimId);
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message,
                    });
                }
            }
        });
    }

    function removeClaimRow(claimId) {
        var row = document.querySelector('tr[data-claim-id="' + claimId + '"]');
        if (row) {
            row.remove();
        }
    }
</script>
