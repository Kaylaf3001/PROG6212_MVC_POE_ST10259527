@{
    ViewData["Title"] = "Claim Policies";
}


<div class="policy-container">
    <h2 class="policy-header">Claim Policies</h2>
    <ul class="policy-list">
        <li class="policy-item">Daily hours worked should not exceed 8 hours.</li>
        <li class="policy-item">Claims must be submitted within 90 days of the work being performed.</li>
        <li class="policy-item">Supporting documents must be provided for all claims.</li>
        <li class="policy-item">Claims will be reviewed and approved by the admin before payment.</li>
        <li class="policy-item">Any discrepancies in the claim amount will result in rejection of the claim.</li>
    </ul>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-image: url("/Images/campus.jpg");
        background-size: cover;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 600;
        text-align: center;
        margin: 30px 0 20px;
        color: #2c3e50;
        text-transform: uppercase;
    }

    .policy-container {
        max-width: 700px;
        margin: 0 auto;
        background-color: #ffffff;
        padding: 30px;
        border: 1px solid #e1e4e8;
        border-radius: 10px;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
    }

    .policy-header {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 20px;
        color: #34495e;
        text-align: center;
        text-transform: capitalize;
    }

    .policy-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .policy-item {
        font-size: 1rem;
        line-height: 1.6;
        color: #555;
        padding: 15px;
        margin: 10px 0;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .policy-item:hover {
            background-color: #eaf6ff;
            border-color: #b8d8f7;
            transform: scale(1.03);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
</style>
