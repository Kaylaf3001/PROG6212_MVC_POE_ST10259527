@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        color: #343a40;
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 400px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
       
    }

    h1 {
        color: #343a40;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    .btn-primary,
    .btn-secondary {
        display: block;
        width: 100%;
        padding: 10px;
        font-size: 16px;
        text-align: center;
        border-radius: 5px;
        text-decoration: none;
        margin-top: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .text-center {
        text-align: center;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }
</style>

<div class="container">
    <h1>Login</h1>
    <p class="text-center mb-4">Please select your login type</p>

    <a href="~/Lecturer/LecturerLogin" class="btn btn-primary">Login as Lecturer</a>
    <a href="~/Admin/Login" class="btn btn-secondary">Login as Admin</a>
</div>
