@model PROG6212_MVC_POE_ST10259527.Models.ClaimsModel
@{
    ViewData["Title"] = "Submit Claim";
}

<style>
    body {
        color: #343a40;
        font-family: Arial, sans-serif;
    }

    .container {
        padding: 20px;
        border-radius: 8px;
    }

    .form-label {
        color: #343a40;
    }

    .form-control {
        border: 1px solid #ced4da;
        color: #343a40;
    }

        .form-control:focus {
            color: #343a40;
            border-color: #80bdff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .footer {
        background-color: rgba(23, 23, 23, 0.2);
        text-align: center;
        color: white;
    }
</style>

<div class="d-flex align-items-center mb-4">
    <h1>Submit Claim</h1>
</div>

<form id="claimForm" asp-action="AddClaim" method="post" enctype="multipart/form-data">
    <div>
        <label for="moduleCode" class="form-label">Module Code</label>
        <input type="text" class="form-control" id="moduleCode" name="ModuleCode" placeholder="Enter the Module Code" required />
    </div>
    <div class="form-group mb-3">
        <label for="hoursWorked" class="form-label">Hours Worked</label>
        <input type="number" class="form-control" id="hoursWorked" name="HoursWorked" min="0" placeholder="Enter the number of hours worked" required />
    </div>

    <div class="form-group mb-3">
        <label for="hourlyRate" class="form-label">Hourly Rate</label>
        <input type="number" class="form-control" id="hourlyRate" name="HourlyRate" min="0" placeholder="Enter the hourly rate" required />
    </div>

    <!-- Date Input Section -->
    <div class="form-group mb-3">
        <label for="date" class="form-label">Claim Date</label>
        <input type="date" class="form-control" id="Date" name="Date" required />
    </div>

    <!-- Document Upload Section -->
    <div class="form-group mb-4">
        <label for="supportingDocument" class="form-label">Upload Supporting Document</label>
        <input type="file" class="form-control" id="supportingDocument" name="SupportingDocument" accept=".pdf,.doc,.docx,.png,.jpg" required />
        <small class="form-text text-muted">Accepted formats: .pdf, .doc, .docx, .png, .jpg</small>
    </div>

    <button type="button" class="btn btn-primary" onclick="showConfirmationPopup()">Submit</button>
</form>

<!-- Confirmation Popup -->
<div id="confirmationPopup" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5);">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 20px; border-radius: 8px;">
        <h5>Confirm Submission</h5>
        <p id="confirmationDetails"></p>
        <button class="btn btn-success" onclick="submitForm()">Confirm</button>
        <button class="btn btn-danger" onclick="closePopup()">Cancel</button>
    </div>
</div>

<script>
    function showConfirmationPopup() {
        const moduleCode = document.getElementById('moduleCode').value;
        const hoursWorked = document.getElementById('hoursWorked').value;
        const hourlyRate = document.getElementById('hourlyRate').value;
        const date = document.getElementById('Date').value;

        const totalPayment = (hoursWorked * hourlyRate).toFixed(2);

        const confirmationDetails = `
            <strong>Module Code:</strong> ${moduleCode}<br>
            <strong>Hours Worked:</strong> ${hoursWorked}<br>
            <strong>Hourly Rate:</strong> ${hourlyRate}<br>
            <strong>Date:</strong> ${date}<br>
            <strong>Total Payment:</strong> $${totalPayment}
        `;

        document.getElementById('confirmationDetails').innerHTML = confirmationDetails;
        document.getElementById('confirmationPopup').style.display = 'block';
    }

    function closePopup() {
        document.getElementById('confirmationPopup').style.display = 'none';
    }

    function submitForm() {
        document.getElementById('claimForm').submit();
    }
</script>