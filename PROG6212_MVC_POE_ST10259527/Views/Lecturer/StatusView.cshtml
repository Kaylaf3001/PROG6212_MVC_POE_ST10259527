@model List<PROG6212_MVC_POE_ST10259527.Models.ClaimsModel>
@{
    ViewData["Title"] = "Claim Status";
}

<style>
    body {
        color: #343a40;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #343a40;
        font-weight: bold;
    }

    p {
        color: #6c757d;
    }

    .table {
        background-color: #ffffff;
        border-radius: 8px;
        overflow: hidden;
    }

        .table th,
        .table td {
            vertical-align: middle;
            border-top: none;
            padding: 15px;
            text-align: left;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .badge {
        font-size: 90%;
        border-radius: 0.25rem;
        padding: 0.5em 1em;
    }

    .badge-success {
        background-color: #28a745;
        color: #fff;
    }

    .badge-warning {
        background-color: #ffc107;
        color: #212529;
    }

    .badge-danger {
        background-color: #dc3545;
        color: #fff;
    }

    /* Add some margin to the button */
    .btn-add {
        margin-top: 20px;
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 16px;
    }

        .btn-add:hover {
            background-color: #0056b3;
        }

</style>

<h1>Claim Status</h1>

<!-- Add New Claim button -->
<a href="/Lecturer/AddClaim" class="btn btn-add">Add New Claim</a>

<!-- Claims status table -->
<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Lecturer ID</th>
            <th scope="col">Total Amount</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.RowKey</th>
                <td>@item.LecturerID</td>
                <td>(@item.HourlyRate * @item.HoursWorked)</td>
                <td>
                    @if (item.Status == "Pending")
                    {
                        <span class="badge badge-warning">@item.Status</span>
                    }
                    else if (item.Status == "Approved")
                    {
                        <span class="badge badge-success">@item.Status</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">@item.Status</span>
                    }
                </td>
            </tr>
        }
</table>
