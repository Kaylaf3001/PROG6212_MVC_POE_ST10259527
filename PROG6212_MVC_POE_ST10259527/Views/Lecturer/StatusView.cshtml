@model List<PROG6212_MVC_POE_ST10259527.Models.ClaimsModel>

@{
    ViewData["Title"] = "Claim Status";
}

<style>
    body {
        color: #343a40;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #343a40;
        font-weight: bold;
        display: inline-block;
        margin-right: 20px;
    }

    .table {
        background-color: #ffffff;
        border-radius: 8px;
        overflow: hidden;
    }

        .table th, .table td {
            vertical-align: middle;
            border-top: none;
            padding: 15px;
            text-align: left;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .badge {
        font-size: 90%;
        border-radius: 0.25rem;
        padding: 0.5em 1em;
    }

    .badge-success {
        background-color: #28a745;
        color: #fff;
    }

    .badge-warning {
        background-color: #ffc107;
        color: #212529;
    }

    .badge-danger {
        background-color: #dc3545;
        color: #fff;
    }

    /* Button styles */
    .btn {
        margin-right: 10px;
        padding: 10px 20px;
        border-radius: 4px;
        border: none;
        font-size: 16px;
        color: white;
    }

    .btn-add {
        background-color: #007bff;
        color: white;
    }

    .btn-pending {
        background-color: #ffc107;
        color: #212529;
        font-size: 12px;
        padding: 8px;
    }

    .btn-approved {
        background-color: #28a745;
        font-size: 12px;
        padding: 8px;
    }

    .btn-rejected {
        background-color: #dc3545;
        font-size: 12px;
        padding: 8px;
    }

    .btn-clear {
        background-color: #6c757d;
        font-size: 12px;
        padding: 8px;
    }

    .btn:hover {
        opacity: 0.9;
    }

    /* Align button next to heading */
    .heading-container {
        display: flex;
        align-items: center;
        margin-top: 20px;
    }
</style>

<div class="heading-container">
    <h1>Claims</h1>
    <!-- Add New Claim button -->
    <a href="/Lecturer/AddClaim" class="btn btn-add">Add New Claim</a>
</div>
<br />
<!-- Filter buttons -->
<a href="@Url.Action("FilterByStatus", new { status = "Pending" })" class="btn btn-pending">Pending</a>
<a href="@Url.Action("FilterByStatus", new { status = "Approved" })" class="btn btn-approved">Approved</a>
<a href="@Url.Action("FilterByStatus", new { status = "Rejected" })" class="btn btn-rejected">Rejected</a>
<a href="@Url.Action("ClearFilters")" class="btn btn-clear">Clear Filters</a>

<!-- Claims status table -->
<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th scope="col">Claims ID</th>
            <th scope="col">Lecturer ID</th>
            <th scope="col">Total Amount</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.RowKey</th>
                <td>@item.LecturerID</td>
                <td>@item.CalculateTotalAmount()</td>
                <td>
                    @if (item.Status == "Pending")
                    {
                        <span class="badge badge-warning">@item.Status</span>
                    }
                    else if (item.Status == "Approved")
                    {
                        <span class="badge badge-success">@item.Status</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">@item.Status</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
